<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.kawka.myfly.MainActivity">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ZAPLANOWANE LOTY "
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp"
    android:layout_gravity="center"
    android:textSize="18dp"
    android:textStyle="bold"
    android:textColor="#000000"/>


<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/scrollbar_shape_style"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PTL wariant I / 11.03.2017"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"/>
            <com.veinhorn.tagview.TagView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PTL wariant I / 11.03.2017"
                android:textSize="16sp"
                app:tagType="modern"
                app:tagColor="#2F94FA"
                app:tagUpperCase="true" />


            <com.loopeer.android.librarys.scrolltable.ScrollTableView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="-80dp"
                android:id="@+id/scroll_wariant1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PTL wariant I / 11.03.2017"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"/>
            <com.veinhorn.tagview.TagView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PTL wariant II / 11.03.2017"
                android:textSize="16sp"
                app:tagType="modern"
                app:tagColor="#2F94FA"
                app:tagUpperCase="true" />


            <com.loopeer.android.librarys.scrolltable.ScrollTableView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="-80dp"
                android:id="@+id/scroll_wariant2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PTL wariant I / 11.03.2017"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"/>
            <com.veinhorn.tagview.TagView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PTL wariant I / 13.03.2017"
                android:textSize="16sp"
                app:tagType="modern"
                app:tagColor="#2F94FA"
                app:tagUpperCase="true" />


            <com.loopeer.android.librarys.scrolltable.ScrollTableView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="-80dp"
                android:id="@+id/scroll_wariant3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PTL wariant I / 11.03.2017"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"/>
            <com.veinhorn.tagview.TagView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PTL wariant II / 13.03.2017"
                android:textSize="16sp"
                app:tagType="modern"
                app:tagColor="#2F94FA"
                app:tagUpperCase="true" />


            <com.loopeer.android.librarys.scrolltable.ScrollTableView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="-80dp"
                android:id="@+id/scroll_wariant4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                />

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

</LinearLayout>
