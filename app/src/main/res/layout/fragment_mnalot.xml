<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nalot_calosc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e5eff9"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/nalot_wszystko_layout"
        android:orientation="vertical">



<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/scrollbar_shape_style"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kawka.myfly.MainActivity"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/wykonaneLotyCard"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:elevation="0dp"
            android:layout_marginTop="10dp"
            app:contentPadding="5dp"
            >

            <com.veinhorn.tagview.TagView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wykonane loty"
                android:textSize="16sp"
                app:tagType="modern"
                app:tagColor="#2F94FA"
                app:tagUpperCase="true"
                />

            <Button
                android:id="@+id/dataButton1"
                android:layout_gravity="right"
                android:background="#45207c"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingLeft="7dp"
                android:drawableLeft="@drawable/ic_mode_edit_white_24dp"

                />


<LinearLayout
    android:id="@+id/wykonaneLoty"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="30dp"
            android:id="@+id/zakresDat_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal"
            >




            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:max="15"
                android:layout_marginLeft="0dp"
                />



            <EditText
                android:layout_marginLeft="15dp"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:hint="Od daty:"
                android:onClick="dataOd"
                android:editable="false"
                android:id="@+id/dataOd_et"
                android:textSize="15sp"
                />

            </LinearLayout>




            <LinearLayout
                android:id="@+id/layout_loty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.loopeer.android.librarys.scrolltable.ScrollTableView
                    android:layout_marginTop="20dp"
                    android:id="@+id/scroll_t_loty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"
            android:layout_marginTop="10dp"
            app:contentPadding="5dp"

            >
        <com.veinhorn.tagview.TagView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nalot na sp w roku bieżącym"
            android:textSize="16sp"
            app:tagType="modern"
            app:tagColor="#2F94FA"
            app:tagUpperCase="true"

            android:id="@+id/tagView" />


            <com.loopeer.android.librarys.scrolltable.ScrollTableView
                android:layout_marginTop="20dp"
                android:id="@+id/scroll_t_roczny"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"
            android:layout_marginTop="10dp"
            app:contentPadding="5dp"
            >


            <com.veinhorn.tagview.TagView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nalot sym. w roku bieżącym"
                android:textSize="16sp"
                app:tagType="modern"
                app:tagColor="#2F94FA"
                app:tagUpperCase="true"
                android:id="@+id/tagView2" />

            <com.loopeer.android.librarys.scrolltable.ScrollTableView
            android:layout_marginTop="20dp"
            android:id="@+id/scroll_t_roczny_sym"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"
            android:layout_marginTop="10dp"
            app:contentPadding="5dp"
            >
        <com.veinhorn.tagview.TagView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nalot aktualny"
            android:textSize="16sp"
            app:tagType="modern"
            app:tagColor="#2F94FA"
            app:tagUpperCase="true"
/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/nal_akt"
    >

        <com.loopeer.android.librarys.scrolltable.ScrollTableView
            android:layout_marginTop="20dp"
            android:id="@+id/scroll_t_aktualny"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

</LinearLayout>
        </android.support.v7.widget.CardView>




    </LinearLayout>


</ScrollView>

    </LinearLayout>
</RelativeLayout>