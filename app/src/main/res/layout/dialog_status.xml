<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/titleText"
        style="@android:style/TextAppearance.Widget.TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dip"
        android:layout_marginTop="7dp"
        android:textSize="19dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="3dp"
     />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FF0000FF" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="7dp">
    <TextView
        android:id="@+id/textView1_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dip"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/textView1_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="4dp"

        />

</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp">
        <TextView
            android:id="@+id/textView2_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dip"
            android:textColor="#000000"

            />

        <TextView
            android:id="@+id/textView2_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp">
        <TextView
            android:id="@+id/textView3_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dip"
            android:textColor="#000000"

            />

        <TextView
            android:id="@+id/textView3_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dip"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"

            />

    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="7dp">
    <TextView
    android:id="@+id/textView4_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginLeft="16dip"
    android:textColor="#000000"

        />

<TextView
    android:id="@+id/textView4_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:textColor="#000000"
    android:textStyle="bold"
    android:layout_marginLeft="4dp"

    />
</LinearLayout>

    </LinearLayout>